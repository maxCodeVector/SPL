{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "g++ build spl",
            "command": "/usr/bin/g++",
            "args": [
                "-std=c++11",
                "-g",
                "-lfl",
                "-ly",
                "deliver.cpp",
                "syntax.tab.c",
                "sematic.cpp",
                "-o",
                "${fileDirname}/../bin/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        }
    ]
}